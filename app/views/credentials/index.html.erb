<div class="hero-unit">
  <h2>Listing all credentials</h2>
</div>
<table class="table table-striped">
  <tr>
    <th>Category</th>
    <th>Url</th>
    <th>Username</th>
    <th>Password</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% if @websites.present? %>
  <% @credentials.each do |credential| %>
    <tr>
      <td><%= credential.category %></td>
      <td><%= credential.url %></td>
       <td><%= credential.username %></td>
      <td><%= credential.password %></td>
      <td><%= credential.notes %></td>
      <td><%= link_to 'Show', credential %></td>
      <td><%= link_to 'Edit', edit_credential_path(credential) %></td>
      <td><%= link_to 'Destroy', credential, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% else %>
   <tr>
     <td colspan=8>You don't have any credentials yet.</td>
   </tr>
<% end %>
</table>

<br />

<%= link_to 'New Credential', new_credential_path() %>
