<%= simple_form_for @credential, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @credential.errors.any? %>
   <div class="alert alert-error fade in">
    <a class="close" data-dismiss="alert" href="#">&times;</a>
      <h2><%= pluralize(@credential.errors.count, "error") %> prohibited this credential from being saved:</h2>

      <ul>
      <% @credential.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.input :category, :input_html => { :class => "span6" },
              :placeholder => "e.g. CMS, facebook, GA etc..." %>
 <%= f.input :url, :input_html => { :class => "span6" },
              :placeholder => "e.g. http://figcreative.co.uk/admin/wp-admin" %>

   <%= f.input :username, :input_html => { :class => "span6" },
              :placeholder => "Who's the daddy?" %>
   <%= f.input :password, :input_html => { :class => "span6" },
              :placeholder => "What's his password?" %>
  
    <%= f.input :notes, :input_html => { :class => "span6" },
              :placeholder => "Anything to declare?" %>
 

   <%= f.input :website_id, collection: Website.all %>
   <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>
