<div class="hero-unit">
  <h2>Listing all websites</h2>
</div>

<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Url</th>
    <th>Client</th>
    <th>Credentials</th>
    <th colspan="3">Actions</th>
  </tr>
<% if @websites.present? %>
  <% @websites.each do |website| %>
    <tr>
      <td><%= website.id %></td>
      <td><%= website.name %></td>
      <td><%= website.url %></td>
       <td><%= website.client.name unless website.client.nil? %></td>
      
      <td><%= link_to 'View Credentials', website_credentials_path(:website_id => website) %></td>
      <td><%= link_to 'Show', website_path(website) %></td>
      <td><%= link_to 'Edit', edit_website_path(website) %></td>
      <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% else %>
   <tr>
     <td colspan=8>You don't have any websites yet.</td>
   </tr>
<% end %>
</table>

